---
// we can import fonts here, after installing them via Fontsource
// see https://fontsource.org/docs/installation for instructions
import "@fontsource/karla";
import '@fontsource/kaushan-script';

---

<style is:global>
  /* We can use this style tag to set up colors, fonts, etc. */
  :root {
    --color-background: rgb(40, 33, 25);
    --color-main-container: #D9D9D9;
    --color-title: #E0D2B7;
    --color-text: rgb(40, 33, 25);
    --color-accent: rgb(200, 115, 55);
    --color-focus-ring: rgb(165, 77, 40);

    --font-title: "Kaushan-script", cursive;
    --font-body: "Karla", sans-serif;
    --font-headings: "Karla", sans-serif;

    font-size: 18px;

    /* These sizes are used by the Container component to set up the page container */
    --size-page-width: 1200px;
    --size-page-padding: 2rem;
  }

  /* We can also apply these colors as a default */
  body {
    background-color: var(--color-background);
    color: var(--color-text);
    font-family: var(--font-body);
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    color: var(--color-accent);
  }

  h1 {
    font-family: var(--font-title);
  }

  p {
  max-width: 80ch;
  word-wrap: break-word; /* Ensures long words also break if they exceed the width */
  overflow-wrap: break-word; /* Modern alternative to word-wrap */
  }

  /* default focus ring styles */
  *:focus-visible {
    outline: 3px solid var(--color-focus-ring);
  }
</style>
