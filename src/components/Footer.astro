 <style>

  .navBoxed{
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 2.5rem;
    grid-area: a;
  }
  
  .socialMedia {
    display: flex;
    gap: 1rem;
    justify-content: center;
    align-items: center;
    padding: 0 2.5rem;
    grid-area: b;
  }

  .social-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.2s;
  }
  .social-icon:hover {
    transform: scale(1.15);
    filter: brightness(1.2);
  }

  section.footer {
    background-color: #19170f;

  }

  .innerContainer{
    margin: 0 auto;
    max-width:100%;
    width: 1200px;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    grid-template-rows: 10rem 5rem;
    grid-template-areas:
      "a b"
      "c c";    

  }

    .navlist {
      grid-area: a;
    }

    .copyright{
    grid-area: c;
    display: flex;
    justify-content: center;
    color: var(--color-main-container);
    padding-bottom: 1rem;
    margin-top: 1.5rem;
    }

  @media (max-width:768px) {
    .innerContainer{
      grid-template-columns: 1fr;
      grid-template-rows: repeat(3, auto);
      grid-template-areas:
        "a"
        "b"
        "c";  
    }
 </style>