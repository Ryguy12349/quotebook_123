---
const { padding=".5rem", radiusTop="0", radiusBottom="0", radiusRight="0", radiusLeft="0" } = Astro.props;

---

<div class="btn" style={`--padding:${padding};--radius-top:${radiusTop}; --radius-right:${radiusRight}; --radius-botton:${radiusBottom}; --radius-left:${radiusLeft};`}>
    <p><slot/></p>
</div>

<style>
    .btn{
        display: flex;
        color: var(--color-main-container);
        background-color: var(--color-accent);
        padding: var(--padding);
        border-radius: var(--radius-top) var(--radius-right) var(--radius-botton) var(--radius-left);
        text-decoration: none;
        align-items: center;
        font-family: var(--font-btn);
        font-size: 1.25rem;
        
    }

    .btn:hover{
        color: var(--color-main-container);
        background-color: var(--color-background);
        transition: color 0.3s ease;
        transition: background-color 0.3s ease;
    }
</style>